<Page x:Class="TG.telas.home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TG.telas"
      mc:Ignorable="d"
      Title="home" Height="620" Width="1080">

    <Grid Background="White">
        <ScrollViewer x:Name="Scroll" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Height="600" Width="905" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="48,10,127,10">
            <WrapPanel x:Name="painel" MinWidth="250" MinHeight="{Binding ElementName=Scroll, Path=ViewportHeight}"/>
        </ScrollViewer>


    </Grid>
</Page>
