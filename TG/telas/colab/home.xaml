<Page x:Class="TG.telas.home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TG.telas"
      mc:Ignorable="d"
      Title="home" Height="620" Width="1074">

    <Grid Background="White">
        <Label x:Name="teste" HorizontalAlignment="Left" Margin="98,20,0,0" VerticalAlignment="Top" Width="206">
            <Label.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Label.BorderBrush>
        </Label>
        <ScrollViewer x:Name="Scroll" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Height="539" Width="852" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="220,80,2,1">
            <WrapPanel x:Name="painel" MinWidth="250" MinHeight="{Binding ElementName=Scroll, Path=ViewportHeight}"/>
        </ScrollViewer>


    </Grid>
</Page>
