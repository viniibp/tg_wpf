                <Label Content="Colocação:" HorizontalAlignment="Left" Margin="25,358,0,0" VerticalAlignment="Top" FontFamily="Champagne &amp; Limousines" FontSize="20" FontWeight="Bold"/>
                <Label Content="Nivel:" HorizontalAlignment="Left" Margin="25,440,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.529,-1.289" FontFamily="Champagne &amp; Limousines" FontSize="20" FontWeight="Bold"/>
                <Label Content="Total de Cursos:" HorizontalAlignment="Left" Margin="25,520,0,0" VerticalAlignment="Top" Width="156" RenderTransformOrigin="-0.329,0.312" FontFamily="Champagne &amp; Limousines" FontSize="20" FontWeight="Bold"/>
