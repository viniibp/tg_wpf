                <Label Content="Media:" HorizontalAlignment="Left" Margin="25,271,0,0" VerticalAlignment="Top" FontFamily="Champagne &amp; Limousines" FontSize="20" FontWeight="Bold"/>
                <Border  Margin="83,22,0,404" BorderThickness="1" BorderBrush="Gray" HorizontalAlignment="Left" Width="135">
                    <Image Source="/TG;component/assets/user_placeholder.png" HorizontalAlignment="Left" Height="133" VerticalAlignment="Top" Width="133"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
