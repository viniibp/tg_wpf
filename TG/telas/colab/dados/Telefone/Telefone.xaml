<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TG.telas.colab.dados.Telefone"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="TG.telas.colab.dados.Telefone.Telefone"
             mc:Ignorable="d" Background="Transparent" Height="30" Width="290" Margin="0,3,0,3">
    <Grid>
        <Border x:Name="border" CornerRadius="10" Padding="1" BorderThickness="1" BorderBrush="Gray" Background="White">
            <Grid>
                <Label x:Name="lb_telefone" Content="Label" HorizontalAlignment="Left" Margin="22,0,0,0" VerticalAlignment="Top" Width="186" FontWeight="Bold" FontSize="14"/>
                <Button  HorizontalAlignment="Left" Margin="232,1,0,0" VerticalAlignment="Top" Width="48" Height="24" Click="Button_Click">
                    <materialDesign:PackIcon x:Name="trash" Kind="Trash"/>
                </Button>
            </Grid>
        </Border>

    </Grid>
</UserControl>
